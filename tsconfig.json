{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "es2020"],
        "noImplicitAny": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "dist",
        "module": "nodenext",
        "moduleResolution": "nodenext"
    },
    "exclude": [
        "node_modules",
        "**/*.(spec|test).ts"
    ]
}
